                            android:orientation="vertical">

                            <TextView
                                style="@style/subMenuTextTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/title_vannamei" />

                            <TextView
                                style="@style/detailsSubMenuDescriptionWhite"
                                android:layout_width="match_parent"
