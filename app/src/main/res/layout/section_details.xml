<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen10"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_100"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/dimen30"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen20"
                android:layout_marginTop="@dimen/dimen10"
                android:layout_marginRight="@dimen/dimen20"
                android:layout_marginBottom="@dimen/dimen10"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/viewDetailsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Section " />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textPondSection"
                        style="@style/viewDetailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum ipsum" />

                </LinearLayout>
                <!--                <com.google.android.material.textview.MaterialTextView-->
                <!--                    style="@style/viewDetailsName"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:text="Section Number" />-->
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/dimen30"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen40"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:src="@drawable/ic_outline_width_wide_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen20"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/textSize"
                            style="@style/viewDetailsText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem" />

                        <com.google.android.material.textview.MaterialTextView
                            style="@style/viewDetailsText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dimen5"
                            android:text=" hectares"
                            android:textColor="#727272"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <com.google.android.material.textview.MaterialTextView
                        style="@style/viewDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Section Size" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/dimen30"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen40"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:src="@drawable/ic_baseline_apps_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen30"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textCapacity"
                        style="@style/viewDetailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum ipsum" />


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/viewDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacity" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/dimen30"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen40"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:src="@drawable/ic_baseline_phishing_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen30"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:gravity="center"
                    android:orientation="vertical">


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textFish"
                        style="@style/viewDetailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum ipsum" />


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/viewDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fish Type" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clipToPadding="false"
            app:cardCornerRadius="@dimen/dimen30"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dimen40"
                    android:layout_height="@dimen/dimen40"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:src="@drawable/ic_outline_spa_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen20"
                    android:layout_marginTop="@dimen/dimen10"
                    android:layout_marginRight="@dimen/dimen30"
                    android:layout_marginBottom="@dimen/dimen10"
                    android:gravity="center"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/textCare"
                        style="@style/viewDetailsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum ipsum" />


                    <com.google.android.material.textview.MaterialTextView
                        style="@style/viewDetailsName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Care Type" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</LinearLayout>